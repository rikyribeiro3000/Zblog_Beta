<% include ../partials/header %>

<div class = "container">
    <div class="row">
        <div class="col-lg-12">
            <h2 style="text-align:center;margin-top:200px;">Add New Comment to <%= blog.title%></h2>
                <div style="width: 50%;text-algin:center; margin:50px auto;">
                    <form action="/blogs/<%= blog._id %>/comments" method="POST">
                             <div class="form-group">
                                <input class="form-control" type="text" name="comment[text]" placeholder="text">
                            </div>
                            <div class="form-group">
                              <button class="btn btn-lg btn-dark btn-block">Submit!</button>
                           </div>
                    </form>                                
                    <a href="/blogs/<%= blog._id %>">Go Back</a>
                </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>


