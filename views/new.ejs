<% include ./partials/header %>


<div class = "container">
    <div class="row">
        <div class="col-lg-12">
            <h2 style="text-align:center;margin-top:50px;">Add New Post</h2>
                <div style="width: 50%;text-algin:center; margin:50px auto;">
                    <form action="/blogs" method="POST">
                             <div class="form-group">
                                    <label>Title</label>
                                    <input  class="form-control" type="text" name="blog[title]" placeholder="title">
                            </div>
                           <div class="form-group">
                                    <label>Image</label>
                                     <input class="form-control" type="text" name="blog[image]" placeholder="image">
                            </div>
                           <div class="form-group">
                                     <label>Blog Content</label>
                                    <textarea  class="form-control" type="text" name="blog[body]"></textarea>
                            </div>
                        <div class="form-group">
                                <button type="submit" class="btn btn-dark">Submit</button>
                        </div>
                    </form>
                </div>
        </div>
    </div>
</div>
