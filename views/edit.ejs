<% include ./partials/header %>

<div class = "container">
    <div class="row">
        <div class="col-lg-12">
            <h2 style="text-align:center;margin-top:50px;">Edit: <%=blog.title%></h2>
                <div style="width: 50%; margin:50px auto;">
                    <form action = "/blogs/<%= blog._id %>?_method=PUT" method="POST">
                        <div class="form-group">
                            <input class="form-control" type="text" name="blog[title]" value="<%=blog.title%>">
                        </div>
                        <div class="form-group">
                         <input class="form-control" name="blog[image]" placeholder="<%=blog.image%>">
                        </div>
                        <div class="form-group">
                        <textarea type="text" class="form-control" name="blog[body]"><%=blog.body%></textarea>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-dark">Submit</button>
                        </div>
                    </form>
                </div>
                
        </div>
    </div>
</div>


<% include ./partials/footer %>



